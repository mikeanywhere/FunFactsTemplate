<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".FunFactsActivity"
    android:background="#ff5cbd78"
    android:id="@+id/rLay">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_next_fact"
        android:id="@+id/ShowFactButton"
        android:background="#ffffffff"
        android:textColor="#ff5cbd78"
        android:layout_above="@+id/toggleButton"
        android:layout_alignLeft="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton" />

    <TextView
        android:text="@string/title_main_did_you_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#80ffffff"
        android:id="@+id/detailFavFact" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FactTextView"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/detailFavFact"
        android:layout_alignStart="@+id/detailFavFact"
        android:text="@string/text_main_fact_primer"
        android:gravity="center_horizontal" />

    <ToggleButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:textOff="@string/toggle_text_favorite_off"
        android:textOn="@string/toggle_text_favorite_on"
        android:layout_above="@+id/shareButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_share"
        android:id="@+id/shareButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
