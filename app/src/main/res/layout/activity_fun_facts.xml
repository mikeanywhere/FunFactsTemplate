<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".FunFactsActivity"
    android:background="#ff5cbd78"
    android:id="@+id/rLay">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Next Fun Fact"
        android:id="@+id/ShowFactButton"
        android:background="#ffffffff"
        android:textColor="#ff5cbd78"
        android:layout_above="@+id/toggleButton"
        android:layout_alignLeft="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton" />

    <TextView
        android:text="Did you know?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#80ffffff"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FactTextView"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="Tap the button to begin!"
        android:gravity="center_horizontal" />

    <ToggleButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:textOff="@string/toggle_favorite_button_off_hint"
        android:textOn="@string/toggle_favorite_button_on_hint"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
